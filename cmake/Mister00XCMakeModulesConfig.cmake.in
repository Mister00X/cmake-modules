cmake_minimum_required(VERSION 3.3...3.15)

@PACKAGE_INIT@

# The first step is to find out if the user requested any special packages.
if(Mister00XCMakeModules_FIND_COMPONENTS)
  # first find out which modules are available
  file(GLOB _Mister00X_FOUND_MODULE_FILES "@PACKAGE_MODULES_INSTALL_DIR@/*.cmake")

  # get the basename of those modules and store it in _Mister00X_FOUND_COMPONENTS
  foreach(filepath IN LISTS _Mister00X_FOUND_MODULE_FILES)
    get_filename_component(_module_name filepath NAME_WLE)
    list(APPEND _Mister00X_FOUND_COMPONENTS ${_module_name})
  endforeach()

  # Now find out if all required components are available
  foreach(component IN LISTS Mister00XCMakeModules_FIND_COMPONENTS)
    if(component IN_LIST _Mister00X_FOUND_COMPONENTS)
      set(Mister00XCMakeModules_${component}_FOUND True)
    else()
      set(Mister00XCMakeModules_${component}_FOUND False)
    endif()
  endforeach()
endif()

set_and_check(Mister00XCMakeModules_MODULE_PATH "@PACKAGE_MODULES_INSTALL_DIR")

check_required_components(Mister00XCMakeModules)
